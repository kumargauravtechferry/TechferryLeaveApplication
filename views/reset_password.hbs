{{> header}}

    {{!-- <section id="banner"> --}}
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                {{{statusMessage}}}
                 {{#if statusError}}
                 <div>
                     here passowrd
                     <p>{{statusMessage}}</p>
                 </div>
                 {{/if}}
                 <div  class="container"> 
                     <div class="registrationFormAlert error_message" id="divCheckPasswordMatch"></div>
                    <form class="login100-form validate-form" action="{{url}}" method="POST">
                        <span class="login100-form-title p-b-34">
                            Reset Password
                        </span>
                        <div class="wrap-input100 rs2-wrap-input100 validate-input m-b-20" data-validate="Type password">
                            <input class="input100" type="password" id ="txtNewPassword" name="password" placeholder=" New Password" required>
                            <span class="focus-input100"></span>
                        </div>
                        <div class="wrap-input100 rs2-wrap-input100 validate-input m-b-20" data-validate="Type password">
                            <input class="input100" type="password" id="txtConfirmPassword" name="Confirm_password" placeholder="Confirm Password" onChange="checkPasswordMatch();" required>
                            <span class="focus-input100"></span>
                        </div>
                        <div>
                        <input class="input100" type="text" name="userId" value="{{userId}}"> 
                        </div>


                        <div class="container-login100-form-btn">
                            <button class="login100-form-btn" id="resetPassowrdButton">
                            Reset Password
                            </button>
                        </div>
                        {{!-- {{message}}
                         --}}
                         

                    </form>
                 </div>

            </div>
        </div>
        </div>

        <script>

            function checkPasswordMatch() {
                $('.error_message').hide();
                var password = $("#txtNewPassword").val();
                var confirmPassword = $("#txtConfirmPassword").val();

                if (password != confirmPassword){
                    $('.error_message').show();
                     $('#resetPassowrdButton').attr('disabled','disabled');
                    $("#divCheckPasswordMatch").html("Passwords do not match!");
                }
                else{
                    $('#resetPassowrdButton').removeAttr('disabled');
                     $("#divCheckPasswordMatch").html("Passwords match.");
                }
                   
            }
        </script>

    {{!-- </section> --}}