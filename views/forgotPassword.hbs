<link rel='stylesheet' href='../stylesheets/style.css' />
<style>
    .validate-form {
        margin: 0px auto;
    }
    .rs1-wrap-input100{
        width:100% !important
    }
    .login100-form-title {
        padding: 25px
    }
    .validate-input{
        margin-bottom: 25px;
    }
    .login100-form{
        padding: 29px 50px;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        background: #fff;
        width: 30%;
        height: 35%;
        /* overflow: auto; */
        margin: auto;
        margin-left: 14%;
        position: absolute;
        top: 0;
        left: 17%;
        bottom: 0;
        right: 0;
    }

    .error_message{
        color: red;
        margin-bottom: 12px;
    }
    .cross_close{
        float: right;
        cursor: pointer;
    }
    .send_message{
        padding: 24px;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        position: absolute;
        left: 50%;
        top: 50%;
        -webkit-transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
            background: #fff;
    }
    .send_message label{
        font-weight: 600;
    }

    .title_message{
          padding: 17px;  
    }
</style>

